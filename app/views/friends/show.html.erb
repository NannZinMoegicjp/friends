
<div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= @friend.first_name %> <%= @friend.last_name %></h5>
        <p class="card-text">
          <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %>
        </p>
        <div class="mt-2 d-flex">
        <%= link_to "Edit", edit_friend_path(@friend), class:"btn btn-secondary me-2" %>
        <%= button_to 'Delete', @friend, method: :delete, onclick:"return confirmDelete();", class:"btn btn-danger me-2" %>
        <%= link_to "Back", friends_path, class:"btn btn-dark" %>
        </div>
      </div>
    </div>
  </div>
</div>
